@model IEnumerable<Tuan4_PhamMinhCo.Models.Sach>
@Styles.Render("~/Content/Site.css")
@{
    ViewBag.Title = "ListSach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>THÔNG TIN SÁCH</h2>
<p style="height: 50px; width: 120px; background-color: #a1bfd6; text-decoration: none; font-size: 17px; padding: 12px; font-weight: bold; border-radius: 5px">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="border: 1px solid #00ff90">
    <tr style="background-color: dodgerblue">
        <th style="height: 50px; padding-top: 15px; text-align: center"> Mã loại </th>
        <th style="height: 50px; padding-top: 15px; text-align: center"> Tên sách</th>
        <th style="height: 50px; padding-top: 15px; text-align: center"> Hình </th>
        <th style="height: 50px; padding-top: 15px; text-align: center"> Giá bán</th>
        <th style="height: 50px; padding-top: 15px; text-align: center"> Ngày cập nhật </th>
        <th style="height: 50px; padding-top: 15px; text-align: center"> Số lượng tồn</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align: center;">
            <td class="contentList" style="padding-top:120px">@Html.DisplayFor(modelItem => item.maloai)</td>
            <td class="contentList" style="padding-top:120px">@Html.DisplayFor(modelItem => item.tensach)</td>
            <td><img style="width:200px; height: 250px" src="@item.hinh" alt="hinh thumbnail" /></td>
            <td class="contentList" style="padding-top:120px">@Html.DisplayFor(modelItem => item.giaban)</td>
            <td class="contentList" style="padding-top:120px">@Html.DisplayFor(modelItem => item.ngaycapnhat)</td>
            <td class="contentList" style="padding-top:120px">@Html.DisplayFor(modelItem => item.soluongton)</td>
            <td class="edit" style="padding-top:120px">
                @Html.ActionLink("Edit", "Edit", new { id = item.masach }) |
                @Html.ActionLink("Detail", "Detail", new { id = item.masach }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.masach })
            </td>
        </tr>
    }
</table>