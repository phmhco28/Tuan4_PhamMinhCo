@model Tuan4_PhamMinhCo.Models.Sach

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Sach</h4>
    <hr />
    <div id="container">
        <div id="book-img">
            <img src="@Model.hinh" />
            <input style="margin-top: 10px; margin-left: 70px; background-color: #79d49d; font-weight: bold; height: 40px; width: 100px; outline: none" type="submit" value="Delete" class="btn btn-default" />
        </div>
        <div id="book-info">
            <div class="content">
                <h2>Mã loại: </h2>
                <h3>@Html.DisplayFor(model => model.maloai)</h3>
            </div>
            <div class="content">
                <h2>Tên sách: </h2>
                <h3>@Html.DisplayFor(model => model.tensach)</h3>
            </div>
            <div class="content">
                <h2>Giá bán: </h2>
                <h3>@Html.DisplayFor(model => model.giaban) VNĐ</h3>
            </div>
            <div class="content">
                <h2>Ngày cập nhật: </h2>
                <h3>@Html.DisplayFor(model => model.ngaycapnhat)</h3>
            </div>
            <div class="content">
                <h2>Số lượng tồn: </h2>
                <h3>@Html.DisplayFor(model => model.soluongton)</h3>
            </div>
        </div>
    </div>
   

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back to List", "ListSach")
        </div>
    }
</div>
